<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">



<mapper namespace="com.group2.dingmall.dao.BookCategoryMapper">
    <!-- 获取一级类别列表 -->
    <select id="getBookCategories" resultType="com.group2.dingmall.controller.mall.vo.BookCategoryVO">
        select category_id,category_name
        from book_category
        where category_level = 1 and is_deleted = 0
    </select>

    <!-- 获取所有二级类别 -->
    <select id="getSecondCategoryList" resultType="java.lang.String">
        select category_name
        from book_category
        where parent_id = #{parentId}
    </select>


</mapper>